# Discord (create a bot in the Dev Portal, invite to your server, enable "Message Content Intent")
DISCORD_BOT_TOKEN=your_discord_bot_token
DISCORD_CHANNEL_ID=123456789012345678   # the channel where your VIP signals appear

# Execution
DRY_RUN=true            # true = log only (safe). Set false to actually trade.
EXECUTION_MODE=OTO      # OTO = place TPs/SL after entry fills (recommended/safe)

# Risk / sizing
TRADE_SIZE_USD=100      # per trade total notional
TP_WEIGHTS=0.10,0.15,0.15,0.20,0.20,0.20   # must sum to ~1.0

# Hyperliquid API (fill these to go live)
HYPERLIQUID_BASE=https://api.hyperliquid.xyz
HYPER_API_KEY=your_key_id
HYPER_API_SECRET=your_private_key      # keep secure
ACCOUNT_MODE=spot                      # "spot" or "perp"

# Optional timeouts & cadence
POLL_OPEN_ORDERS_SEC=20
ENTRY_TIMEOUT_MIN=120

